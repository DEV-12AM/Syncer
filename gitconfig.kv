<GitConfigLayout>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    Label:
        text: 'GitHub PAT (Token)'
        size_hint_y: None
        height: 40
        font_size: 18
    TextInput:
        id: username
        multiline: False
        size_hint_y: None
        height: 50
        font_size: 16

    Label:
        text: 'Git Email'
        size_hint_y: None
        height: 40
        font_size: 18
    TextInput:
        id: email
        multiline: False
        size_hint_y: None
        height: 50
        font_size: 16

    Label:
        text: 'Repository Link'
        size_hint_y: None
        height: 40
        font_size: 18
    TextInput:
        id: repo_link
        multiline: False
        size_hint_y: None
        height: 50
        font_size: 16

    Label:
        text: 'Commit Message (Optional)'
        size_hint_y: None
        height: 40
        font_size: 18
    TextInput:
        id: commit_message
        multiline: False
        size_hint_y: None
        height: 50
        font_size: 16

    Label:
        text: 'Local Vault Link'
        size_hint_y: None
        height: 40
        font_size: 18
    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10
        TextInput:
            id: local_vault_link
            multiline: False
            size_hint_x: 0.75
            font_size: 16
            readonly: True  # Prevent manual edits
        Button:
            id: select_dir_button
            text: 'üìÅ'
            size_hint_x: 0.25
            font_size: 24
            background_color: 0.2, 0.6, 1, 1  # Blue for visibility
            on_press: root.select_local_vault()

    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10
        Button:
            text: 'Run Git Commands'
            font_size: 16
            background_color: 0.1, 0.7, 0.1, 1  # Green
            on_press: root.run_commands()
        Button:
            text: 'Clear Cache'
            font_size: 16
            background_color: 1, 0.2, 0.2, 1  # Red
            on_press: root.clear_cache()

    ScrollView:
        size_hint_y: None
        height: 200
        canvas.before:
            Color:
                rgba: 0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: output
            text: root.output_text
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            color: 0, 0, 0, 1
            font_size: 14
