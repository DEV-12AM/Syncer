
# gitconfig.kv
<GitConfigLayout>:
    orientation: 'vertical'
    spacing: 10
    padding: [10, 10]

    Label:
        text: 'GitHub PAT'
        size_hint_y: None
        height: 40
        font_size: 18
    TextInput:
        id: username
        multiline: False
        size_hint_y: None
        height: 50
        font_size: 16
        hint_text: 'Enter your GitHub PAT'

    Label:
        text: 'Git Email'
        size_hint_y: None
        height: 40
        font_size: 18
    TextInput:
        id: email
        multiline: False
        size_hint_y: None
        height: 50
        font_size: 16
        hint_text: 'Enter your GitHub email'

    Label:
        text: 'Repository Link'
        size_hint_y: None
        height: 40
        font_size: 18
    TextInput:
        id: repo_link
        multiline: False
        size_hint_y: None
        height: 50
        font_size: 16
        hint_text: 'e.g., https://github.com/owner/repo'

    Label:
        text: 'Commit Message'
        size_hint_y: None
        height: 40
        font_size: 18
    TextInput:
        id: commit_message
        multiline: False
        size_hint_y: None
        height: 50
        font_size: 16
        hint_text: 'Optional, defaults to "Auto sync"'

    Label:
        text: 'Local Vault Link'
        size_hint_y: None
        height: 40
        font_size: 18
    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10
        TextInput:
            id: local_vault_link
            multiline: False
            size_hint_y: None
            height: 50
            font_size: 16
            hint_text: 'Select vault folder'
            readonly: True
        Button:
            text: 'üìÅ'
            size_hint_x: 0.2
            font_size: 20
            on_press: root.select_local_vault()

    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10
        Button:
            text: 'Run Git Commands'
            size_hint_x: 0.5
            font_size: 16
            background_color: (0.25, 0.55, 1, 1)
            on_press: root.run_commands()
        Button:
            text: 'Clear Cache'
            size_hint_x: 0.5
            font_size: 16
            background_color: (1, 0.35, 0.35, 1)
            on_press: root.clear_cache()

    Label:
        text: 'Output'
        size_hint_y: None
        height: 40
        font_size: 18
    ScrollView:
        size_hint: (1, None)
        height: 150
        do_scroll_x: False
        do_scroll_y: True
        bar_width: 4
        bar_color: (0.25, 0.55, 1, 1)
        bar_inactive_color: (0.8, 0.8, 0.85, 1)
        Label:
            id: output_label
            text: root.output_text
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            font_size: 14
            color: (0, 0, 0, 1)
            padding: [5, 5]
