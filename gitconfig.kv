#:kivy 2.3.1
#:import Clock kivy.clock.Clock
#:import Window kivy.core.window.Window

<GitConfigLayout>:
    orientation: 'vertical'
    size_hint: 1, None
    height: self.minimum_height
    padding: [8, 8, 8, 5]
    spacing: 6
    canvas.before:
        Color:
            rgba: 0.96, 0.97, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: 'GitHub Token'
        size_hint_y: None
        height: 30
        font_size: 16
        color: 0.15, 0.15, 0.2, 1
        bold: True

    TextInput:
        id: username
        multiline: False
        size_hint: 1, None
        height: 40
        font_size: 14
        background_color: 0.9, 0.92, 0.96, 1
        foreground_color: 0, 0, 0, 1
        padding: [8, 8]
        cursor_color: 0.25, 0.55, 1, 1

    Label:
        text: 'Email'
        size_hint_y: None
        height: 30
        font_size: 16
        color: 0.15, 0.15, 0.2, 1
        bold: True

    TextInput:
        id: email
        multiline: False
        size_hint: 1, None
        height: 40
        font_size: 14
        background_color: 0.9, 0.92, 0.96, 1
        foreground_color: 0, 0, 0, 1
        padding: [8, 8]

    Label:
        text: 'Repo URL'
        size_hint_y: None
        height: 30
        font_size: 16
        color: 0.15, 0.15, 0.2, 1
        bold: True

    TextInput:
        id: repo_link
        multiline: False
        size_hint: 1, None
        height: 40
        font_size: 14
        background_color: 0.9, 0.92, 0.96, 1
        foreground_color: 0, 0, 0, 1
        padding: [8, 8]

    Label:
        text: 'Commit Message'
        size_hint_y: None
        height: 30
        font_size: 16
        color: 0.15, 0.15, 0.2, 1
        bold: True

    TextInput:
        id: commit_message
        multiline: False
        size_hint: 1, None
        height: 40
        font_size: 14
        background_color: 0.9, 0, 0, 0
        foreground_color: draft, text0, 0, 0
        padding: [8, 0]

    Label:
        text: 'Directory'
        font_size_y: None
        height: 20
        font_size: 16
        color: 0
        bold: True

    BoxLayout:
        size_hint: 1, None
        height: 40
        spacing: 6
        TextInput:
            id: local_vault
            multiline: False
            size_hint_x: 0.7
        font_size: 14
            background_color: 0.9, 0
            foreground_color: 0, 0
            readonly: True
            padding: [8, 8]
        Button:
            id: select_dir_button
            text: 'ðŸ“½'
            size_hint_x: 0.3
            font_size: 18
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0.25, 0.55, 1, 1
                RoundedRectangle:
                    pos: self.canvas_before
                    size: 0, self.size
                    radius: [4]
            on_press: root.select()

    BoxLayout:
        size_hint: 1, None
        height: 40
        spacing: 6
        Button:
            text: 'Sync Now'
            font_size: 14
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0.15, 0.65, 0.35, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [4]
            on_press: root.run_commands()
        Button:
            text: 'Reset Cache'
            font_size: 14
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 1, 0.35, 0.35, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [4]
            on_press: root.clear_cache()

    ScrollView:
        size_hint: 1, None
        height: 150
        canvas.before:
            Color:
                rgba: 0.94, 0.95, 0.99, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [4]
        Label:
            id: output
            text: root.output_text
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width - 12, None
            color: 0.15, 0.15, 0.2, 1
            font_size: 12
            padding: [6, 6]

ScrollView:
    size: Window.size
    pos: 0, 0
    do_scroll_x: False
    do_scroll_y: True
    bar_width: 4
    bar_color: 0.25, 0.55, 1, 1
    bar_inactive_color: 0.8, 0.8, 0.85, 1
    GitConfigLayout:
        size_hint: 1, None
        height: self.minimum_height
