#:kivy 2.3.1
#:import Clock kivy.clock.Clock
#:import Window kivy.core.window.Window

<GitConfigLayout>:
    orientation: 'vertical'
    size_hint: 1, None
    height: self.minimum_height
    padding: 20
    spacing: 10

    Label:
        text: 'GitHub PAT (Token)'
        size_hint_y: None
        height: 40
        font_size: 18

    TextInput:
        id: username
        multiline: False
        size_hint_y: None
        height: 50
        font_size: 16

    Label:
        text: 'Git Email'
        size_hint_y: None
        height: 40
        font_size: 18

    TextInput:
        id: email
        multiline: False
        size_hint_y: None
        height: 50
        font_size: 16

    Label:
        text: 'Repository Link'
        size_hint_y: None
        height: 40
        font_size: 18

    TextInput:
        id: repo_link
        multiline: False
        size_hint_y: None
        height: 50
        font_size: 16

    Label:
        text: 'Commit Message (Optional)'
        size_hint_y: None
        height: 40
        font_size: 18

    TextInput:
        id: commit_message
        multiline: False
        size_hint_y: None
        height: 50
        font_size: 16

    Label:
        text: 'Local Vault Link'
        size_hint_y: None
        height: 40
        font_size: 18

    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10
        TextInput:
            id: local_vault_link
            multiline: False
            size_hint_x: 0.8
            font_size: 16
            readonly: True
        Button:
            id: select_dir_button
            text: 'üìÅ'
            size_hint_x: 0.2
            font_size: 20
            on_press: root.select_local_vault()

    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10
        Button:
            text: 'Run Git Commands'
            font_size: 16
            on_press: root.run_commands()
        Button:
            text: 'Clear Cache'
            font_size: 16
            on_press: root.clear_cache()

    ScrollView:
        size_hint_y: None
        height: 200
        canvas.before:
            Color:
                rgba: 0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: output
            text: root.output_text
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            color: 0, 0, 0, 1
            font_size: 14

ScrollView:
    size: Window.size
    pos: 0, 0
    do_scroll_x: False
    do_scroll_y: True
    bar_width: 4
    bar_color: 0.25, 0.55, 1, 1
    bar_inactive_color: 0.8, 0.8, 0.85, 1
    GitConfigLayout:
        size_hint: 1, None
        height: self.minimum_height
